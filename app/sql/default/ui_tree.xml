<?xml version="1.0" encoding="UTF-8"?>
<ui_tree>
	<all>
		SELECT 
			`sid`,
			`pid`,
			`name`,
			`url`,
			`order`,
			`layout` FROM `data_tree` WHERE 1
	</all>

	
	<!-- 返回字段有:trd -->
	<getTrdByAid>
		SELECT
			  `trd`
			FROM `data_article_tree`
			WHERE `data_article_tree`.`aid` = :aid
	</getTrdByAid>
	
	<!-- 返回字段有:trd -->
	<getAidArrByTrd>
		SELECT
			  `aid`
			FROM `data_article_tree`
			WHERE `data_article_tree`.`trd` = :trd
			ORDER BY `aid` DESC
			LIMIT :offset,:length
	</getAidArrByTrd>
	<getAidArrByTrdCnt>
		SELECT
			  count(`aid`) as `cnt`
			FROM `data_article_tree`
			WHERE `data_article_tree`.`trd` = :trd
	</getAidArrByTrdCnt>
</ui_tree>