<?xml version="1.0" encoding="UTF-8"?>
<ui_letter>
	<!-- 获取所有的感谢信,排序按ID倒序 -->
	<!-- 参数:length -->
	<!-- 返回字段:sid,uid,dod,did,content,date -->
	<data>
		SELECT * FROM `data_letter`
			ORDER BY `sid` DESC
			LIMIT 0,:length
	</data>

	<!-- 获取所有对医生的感谢信,排序按ID倒序 -->
	<!-- 参数:dod,length -->
	<!-- 返回字段:sid,uid,dod,did,content,date -->
	<rows_dod>
		SELECT * FROM `data_letter`
		WHERE `dod` = :dod
		LIMIT 0,:length
	</rows_dod>
	
	<!-- 获取所有对医生的感谢信,排序按ID倒序 -->
	<!-- 参数:uid,length -->
	<!-- 返回字段:sid,uid,dod,did,content,date -->
	<rows_uid>
		SELECT * FROM `data_letter`
		WHERE `uid` = :uid
		LIMIT 0,:length
	</rows_uid>
</ui_letter>