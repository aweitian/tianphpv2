<?xml version="1.0" encoding="UTF-8"?>
<article_tags>
	<all>
		SELECT 
			`aid`,`tid`
	 	FROM `data_article_tags` WHERE 1
	</all>
	<q>
		SELECT 
			`tid`
		 FROM `data_article_tags` WHERE `aid` = :aid
	</q>
	<add>
		INSERT INTO `data_article_tags` (
			`aid`,`tid`
		) VALUES (
			:aid,:tid
		)
	</add>
	<update>
		UPDATE `data_article_tags` SET 
			`aid`=:aid,`tid`=:new_tid
		 WHERE `aid`=:aid and `tid`=:old_tid
	</update>
	<rm>
		DELETE FROM `data_article_tags` WHERE `aid`=:aid and `tid`=:tid
	</rm>
</article_tags>
