	UPDATE `data_doctor` SET 
	`email`=:email,`phone`=:phone,
	`avatar`=:avatar,
	`name`=:name,
	`date`=:date
 	WHERE `sid`=:sid
	
	</update>





	<query>
		SELECT * FROM `data_doctor` WHERE 
			`email` LIKE CONCAT(  '%',  :q,  '%' ) 
		LIMIT :offset,:length
	</query>
	<query_count>
		SELECT count(`sid`) as count FROM `data_doctor` WHERE 
			`email` LIKE CONCAT(  '%',  :q,  '%' ) 
	</query_count>



	<add>
		INSERT INTO `data_doctor` (
			`email`,`name`,`pwd`,`phone`,`avatar`,`rpq`,`rpa`,`date`
		) VALUES (
			:email,:name,:pwd,:phone,:avatar,:rpq,:rpa,:date
		)
	</add>
	
	<remove>
		DELETE FROM `data_doctor` WHERE `sid` = :sid
	</remove>
